let mapleader=","
let g:mapleader=","
filetype plugin on
filetype indent on

source ~/.vim/confs/basic.vim                "Basic settings"
source ~/.vim/confs/mappings.vim             "Key mappings"
source ~/.vim/confs/autocmd.vim              "Auto command"
source ~/.vim/confs/plugins.vim              "Plugins settings"
